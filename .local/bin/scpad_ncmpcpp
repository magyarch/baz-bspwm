#!/bin/sh

id=$(xdotool search --class ncmpcpp);
if [ -z "$id" ]; then
    alacritty --class ncmpcpp,ncmpcpp -e ncmpcpp;
else
        if [ ! -f /tmp/ncmpcpp ]; then
                touch /tmp/ncmpcpp && xdo hide "$id"
        elif [ -f /tmp/ncmpcpp ]; then
                rm /tmp/ncmpcpp && xdo show "$id"
        fi
fi
